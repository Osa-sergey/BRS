<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="numberPickerStyle">
        <item name="android:solidColor">@color/buttonColor</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/lightColor</item>
    </style>

    <style name="checkBoxStyle">
        <item name="colorControlNormal">@android:color/holo_green_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
</resources>
